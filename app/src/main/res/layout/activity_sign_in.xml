<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_image_background">

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@null"
        android:hint="Email"
        android:layout_above="@id/email_line_view"
        android:layout_alignStart="@id/password_edit_text"
        android:textColorHint="#80ffffff"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:fontFamily="@font/source_code_variable_italic"/>

    <ImageView
        android:id="@+id/email_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/login_icon_email"
        android:layout_alignStart="@id/email_line_view"
        android:layout_above="@id/email_line_view"
        android:layout_marginBottom="2dp"/>
    
    <View
        android:id="@+id/email_line_view"
        android:layout_width="295dp"
        android:layout_height="2dp"
        android:background="#80ffffff"
        android:layout_alignStart="@id/password_image_view"
        android:layout_above="@id/password_image_view"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@null"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:textColorHint="#80ffffff"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:fontFamily="@font/source_code_variable_italic"/>

    <ImageView
        android:id="@+id/password_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/login_icon_lock"
        android:layout_toLeftOf="@id/password_edit_text"
        android:layout_alignTop="@id/password_edit_text"
        android:layout_marginEnd="8dp"/>

    <View
        android:id="@+id/password_line_view"
        android:layout_width="295dp"
        android:layout_height="2dp"
        android:background="#80ffffff"
        android:layout_below="@id/password_edit_text"
        android:layout_alignStart="@id/password_image_view"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:background="@drawable/login_button_border"
        android:layout_below="@id/password_line_view"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="25sp" />

    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#b0ffffff"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/sign_up_text_view"/>

    <TextView
        android:id="@+id/sign_up_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New here? Sign Up"
        android:textSize="18sp"
        android:textColor="#b0ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/source_code_variable_italic"/>

</RelativeLayout>
