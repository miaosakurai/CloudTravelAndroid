<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:gravity="left"
        android:text="@string/time"
        android:textSize="20dp"/>

    <ImageView
            android:id="@+id/schedule_image"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/schedule_time"
            android:src="@drawable/place_type_icon_amusement_park" />

    <TextView
            android:id="@+id/schedule_position"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/schedule_image"
            android:textSize="20dp"
            android:text="@string/position"/>

    <ImageView
            android:id="@+id/schedule_transpotation"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/transportation_icon_taxi" />

</RelativeLayout>
