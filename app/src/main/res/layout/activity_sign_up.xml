<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_up_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_image_background">

    <TextView
        android:id="@+id/register_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/login_icon_email"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"/>

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginBottom="30dp"
            android:textColorHint="#80ffffff"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:theme="@style/myEditTextStyle"
            android:fontFamily="@font/myriad_pro_italic"
            android:inputType="textEmailAddress"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/login_icon_lock"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"/>

        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="#80ffffff"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"
            android:theme="@style/myEditTextStyle"
            android:fontFamily="@font/myriad_pro_italic"
            android:inputType="textPassword"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/sign_up_icon_password"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"/>

        <EditText
            android:id="@+id/password_confirm_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textColorHint="#80ffffff"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:theme="@style/myEditTextStyle"
            android:fontFamily="@font/myriad_pro_italic"
            android:inputType="textPassword"/>

    </LinearLayout>

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:background="@drawable/login_button_border"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/sign_in_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already has an account? Sign In"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:theme="@style/myEditTextStyle"
        android:fontFamily="@font/myriad_pro_italic"/>

    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="#80ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

</LinearLayout>
